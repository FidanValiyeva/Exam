﻿@using Exam1.Models
@model List<Department>
@{
    ViewData["Title"] = "Index";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Department List</h6>
        <a asp-action="Create" asp-controller="Department" class="btn btn-outline-primary ml-auto">Create</a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    
                    <th colspan="3" scope="col">Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Id</td>                        
                        <td>@item.Name </td>
                        
                        <td>
                            <a class="btn btn-success" asp-action="Update" asp-controller="Department" asp-route-id="@item.Id">Update</a>

                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Department" asp-route-id="@item.Id">Delete</a>

                        </td>
                        <td>
                            <a class="btn btn-success" asp-action="Create" asp-controller="Department" asp-route-id="@item.Id">Create</a>

                        </td>

                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>